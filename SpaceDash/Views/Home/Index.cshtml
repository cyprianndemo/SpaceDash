@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galactic Games: Space Trivia</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .star {
            position: absolute;
            background-color: #fff;
            border-radius: 50%;
            animation: twinkle 5s infinite;
        }

        @@keyframes twinkle {
            0% { opacity: 0; }
            50% { opacity: 1; }
            100% { opacity: 0; }
        }

        .content {
            position: relative;
            z-index: 1;
            text-align: center;
            padding: 20px;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        form {
            display: inline-block;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
        }

        .moving-earth, .moving-moon, .satellite {
            position: absolute;
            border-radius: 50%;
        }

        .moving-earth {
            width: 100px;
            height: 100px;
            background: url('/images/earth.jpeg') no-repeat center/cover;
            animation: orbit-earth 10s infinite linear;
            top: 40%;
            left: 50%;
        }

        @@keyframes orbit-earth {
            0% { transform: rotate(0deg) translateX(200px) rotate(0deg); }
            100% { transform: rotate(360deg) translateX(200px) rotate(-360deg); }
        }

        .moon {
            width: 80px;
            height: 80px;
            background: url('/images/moon.jpeg') no-repeat center/cover;
            animation: orbit-moon 15s infinite linear;
            top: 30%;
            left: 50%;
        }

        @@keyframes orbit-moon {
            0% { transform: rotate(0deg) translateX(250px) rotate(0deg); }
            100% { transform: rotate(360deg) translateX(250px) rotate(-360deg); }
        }

        .satellite {
            width: 80px;
            height: 80px;
            background: url('/images/satelite.jpg') no-repeat center/cover;
            animation: orbit-satellite 15s infinite linear;
            top: 30%;
            left: 50%;
        }

        @@keyframes orbit-satellite {
            0% { transform: rotate(0deg) translateX(250px) rotate(0deg); }
            100% { transform: rotate(360deg) translateX(250px) rotate(-360deg); }
        }

        .game-cards {
            margin-top: 20px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
        }

        .card-body {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            border-radius: 10px;
            padding: 20px;
        }

        .card-title {
            color: #fff;
            font-size: 1.5em;
        }

        .card-text {
            color: #ddd;
        }
    </style>
</head>
<body>
    <div class="stars" id="stars"></div>
    <div class="moving-earth"></div>
    <div class="moon"></div>
    <div class="satellite"></div>

    <div class="content container">
        <h1 class="text-warning">Galactic Games: Space Dash</h1>
        
        <!-- Form to create a team -->
        <form asp-action="CreateTeam" method="post" class="mt-4">
            <div class="mb-3">
                <label for="teamName" class="form-label">Team Name:</label>
                <input type="text" id="teamName" name="Name" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-warning">Start Game</button>
        </form>

        <!-- Game cards -->
        <div class="row game-cards mt-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Explore the Universe</h5>
                        <p class="card-text">Test your knowledge about stars, planets, and galaxies. Do you have what it takes to become a space trivia master?</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Challenge Other Teams</h5>
                        <p class="card-text">Invite your friends to form teams and compete with each other in an epic interstellar battle of wits!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Win Galactic Rewards</h5>
                        <p class="card-text">Score the highest in the trivia and earn rewards fit for a space explorer!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const starsContainer = document.querySelector('#stars');

            // Create stars
            for (let i = 0; i < 100; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.width = `${Math.random() * 3}px`;
                star.style.height = star.style.width;
                starsContainer.appendChild(star);
            }

            // Create planets
            const planetColors = ['#ff9800', '#4caf50', '#2196f3'];
            for (let i = 0; i < 3; i++) {
                const planet = document.createElement('div');
                planet.classList.add('planet');
                planet.style.position = 'absolute';
                planet.style.left = `${Math.random() * 80 + 10}%`;
                planet.style.top = `${Math.random() * 80 + 10}%`;
                planet.style.width = `${Math.random() * 30 + 20}px`;
                planet.style.height = planet.style.width;
                planet.style.backgroundColor = planetColors[i];
                starsContainer.appendChild(planet);
            }
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
