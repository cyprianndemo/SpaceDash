@model GameSession

<h2>Sudoku Challenge</h2>

@if (Model.CurrentChallenge != null && Model.CurrentChallenge.Type == "Sudoku")
{
    <h3>Solve the Sudoku puzzle:</h3>

    <div>
        <!-- Display the Sudoku puzzle here -->
        @Model.CurrentChallenge.SudokuPuzzle
    </div>

    <form asp-action="SubmitSudoku" method="post">
        <input type="hidden" name="sessionId" value="@Model.Id" />
        <textarea name="solution" rows="9" cols="9" placeholder="Enter your solution here"></textarea>
        <button type="submit">Submit Solution</button>
    </form>
}
else
{
    <p>Error: Current challenge is not a Sudoku challenge.</p>
}