@{
    ViewData["Title"] = "SpaceDash - Start Game";
}
<div class="container mt-5">
    <div class="card mx-auto text-center shadow-lg" style="width: 40rem;">
        <div class="card-header bg-primary text-white">
            <h2>Welcome to SpaceDash!</h2>
        </div>
        <div class="card-body">
            <p class="card-text">Enter your team ID to begin your space adventure!</p>
            <form asp-controller="Game" asp-action="StartGame" method="post" class="form-inline justify-content-center">
                <div class="form-group mb-2">
                    <label for="teamId" class="sr-only">Team ID</label>
                    <input type="number" class="form-control" id="teamId" name="teamId" placeholder="Team ID" required>
                </div>
                <button type="submit" class="btn btn-primary mb-2 ml-2">Start Game</button>
            </form>
        </div>
        <div class="card-footer text-muted">
            Good luck, and may the stars guide you!
        </div>
    </div>
</div>