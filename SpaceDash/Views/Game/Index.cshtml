@{
    ViewData["Title"] = "SpaceDash - Start Game";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #000; /* Black background for a space theme */
            color: #fff; /* White text for better visibility */
            font-family: 'Arial', sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px; /* Rounded corners */
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black */
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1); /* Soft glow effect */
        }

        .btn-primary {
            background-color: #007bff; /* Primary button color */
            border: none;
            transition: background-color 0.3s; /* Smooth transition for hover effect */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        .lead {
            color: #e0e0e0; /* Light gray for lead text */
        }

        .footer {
            margin-top: 50px;
            font-size: 0.9em;
            color: #ccc; /* Light gray for footer */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4">
                    <div class="card-body text-center">
                        <h1 class="mt-3 mb-4">Welcome to SpaceDash!</h1>
                        <p class="lead mb-4">Your team is ready for the space adventure!</p>
                        <form asp-controller="Game" asp-action="StartGame" method="post">
                            <input type="hidden" name="teamId" value="@ViewBag.TeamId" />
                            <button type="submit" class="btn btn-primary btn-lg">Start Game</button>
                        </form>
                        <p class="mt-4">Good luck, and may the stars guide you!</p>
                    </div>
                </div>
                <div class="footer text-center">
                    <p>&copy; 2024 SpaceDash. All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
